{
  "name": "@manylead/db",
  "private": true,
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./src/index.ts"
    },
    "./client": {
      "types": "./dist/client.d.ts",
      "default": "./src/client.ts"
    },
    "./schema": {
      "types": "./dist/schema.d.ts",
      "default": "./src/schema.ts"
    }
  },
  "license": "MIT",
  "scripts": {
    "build": "tsc",
    "clean": "git clean -xdf .cache .turbo dist node_modules",
    "dev": "tsc",
    "format": "prettier --check . --ignore-path ../../.gitignore",
    "lint": "eslint --flag unstable_native_nodejs_ts_config",
    "generate": "pnpm with-env drizzle-kit generate",
    "generate:tenant": "pnpm with-env drizzle-kit generate --config=drizzle.config.tenant.ts",
    "migrate": "pnpm with-env tsx src/migrate.ts",
    "seed": "pnpm with-env tsx src/seed.ts",
    "seed:local": "pnpm with-env tsx src/seed-local.ts",
    "push": "pnpm with-env drizzle-kit push",
    "push:tenant": "pnpm with-env drizzle-kit push --config=drizzle.config.tenant.ts",
    "studio": "pnpm with-env drizzle-kit studio",
    "studio:tenant": "pnpm with-env drizzle-kit studio --config=drizzle.config.tenant.ts",
    "typecheck": "tsc --noEmit --emitDeclarationOnly false",
    "with-env": "dotenv -e ../../.env --"
  },
  "dependencies": {
    "@t3-oss/env-core": "catalog:",
    "drizzle-orm": "^0.44.7",
    "drizzle-zod": "^0.8.3",
    "postgres": "^3.4.7",
    "uuid": "catalog:",
    "zod": "catalog:"
  },
  "devDependencies": {
    "@manylead/eslint-config": "workspace:*",
    "@manylead/prettier-config": "workspace:*",
    "@manylead/tsconfig": "workspace:*",
    "@types/node": "catalog:",
    "@types/uuid": "catalog:",
    "drizzle-kit": "^0.31.5",
    "eslint": "catalog:",
    "prettier": "catalog:",
    "tsx": "^4.20.6",
    "typescript": "catalog:"
  },
  "prettier": "@manylead/prettier-config"
}

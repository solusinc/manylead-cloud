{
  "name": "@manylead/tenant-db",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./src/index.ts"
    }
  },
  "license": "MIT",
  "scripts": {
    "build": "tsc",
    "clean": "git clean -xdf .cache .turbo dist node_modules",
    "dev": "tsc",
    "format": "prettier --check . --ignore-path ../../.gitignore",
    "lint": "eslint --flag unstable_native_nodejs_ts_config",
    "typecheck": "tsc --noEmit --emitDeclarationOnly false",
    "generate:tenant": "pnpm with-env drizzle-kit generate",
    "migrate:tenant": "pnpm with-env tsx src/scripts/migrate-tenant.ts",
    "migrate:all": "pnpm with-env tsx src/scripts/migrate-all.ts",
    "create-tenant": "pnpm with-env tsx src/scripts/create-tenant.ts",
    "delete-tenant": "pnpm with-env tsx src/scripts/delete-tenant.ts",
    "purge-tenant": "pnpm with-env tsx src/scripts/purge-tenant.ts",
    "list-tenants": "pnpm with-env tsx src/scripts/list-tenants.ts",
    "health-check": "pnpm with-env tsx src/scripts/health-check.ts",
    "with-env": "dotenv -e ../../.env --"
  },
  "dependencies": {
    "@manylead/db": "workspace:*",
    "drizzle-orm": "^0.44.7",
    "postgres": "^3.4.7",
    "slugify": "^1.6.6",
    "uuid": "^11.0.5"
  },
  "devDependencies": {
    "@manylead/eslint-config": "workspace:*",
    "@manylead/prettier-config": "workspace:*",
    "@manylead/tsconfig": "workspace:*",
    "@types/node": "catalog:",
    "@types/uuid": "^10.0.0",
    "dotenv-cli": "^10.0.0",
    "drizzle-kit": "^0.31.5",
    "eslint": "catalog:",
    "prettier": "catalog:",
    "tsx": "^4.20.6",
    "typescript": "catalog:"
  },
  "prettier": "@manylead/prettier-config"
}
